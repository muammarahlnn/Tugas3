                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/bg_img_news"
                        android:src="@drawable/news2"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="24dp"
