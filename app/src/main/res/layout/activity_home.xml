                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsterrat_regular"
                            android:text="C#"
                            android:textColor="@color/blackPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
